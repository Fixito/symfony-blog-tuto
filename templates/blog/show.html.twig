{% extends "base.html.twig" %}

{% block title %}{{ article.title }} | {{ parent() }}{% endblock %}

{% block content %}
  <article class="container py-5">
    <div class="row">
      <div class="col-12">
        <h1>{{ article.title }}</h1>
        <span>{{ article.publicationDate|date('d/m/Y') }}</span>
        <div class="image-container">
          <img src="{{ asset('uploads/' ~ article.picture) }}" class="img-fluid">
        </div>
      <span class="categories">{% for category in article.categories %} {{ category.label }}{{ loop.last ? '' : ',' }} {% endfor %}</span>
      </div>
    </div>
      <p>{{ article.content }}</p>
    </div>
  </article>
{% endblock %}

